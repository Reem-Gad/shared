<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="weight" />
    <EditText
        android:id="@+id/edit_Length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_weight"
        android:layout_alignParentStart="true"
        android:hint="Length"
        />
    <EditText
        android:id="@+id/edit_chronicdisease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_Length"
        android:layout_alignParentStart="true"
        android:hint="chronic disease"
        />
    <EditText
        android:id="@+id/edit_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_chronicdisease"
        android:layout_alignParentStart="true"
        android:hint="age"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_age"
        android:layout_alignParentStart="true"
        android:text="save"
        android:id="@+id/save"/>



</RelativeLayout>